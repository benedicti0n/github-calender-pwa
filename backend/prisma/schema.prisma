generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  CHROME
  FIREFOX
  BRAVE
  MOBILE
  DESKTOP
}

model User {
  id                  String              @id @default(uuid())
  platforms           PlatformAccess[]
  connectedPlatforms  ConnectedPlatform?  @relation(name: "UserToConnectedPlatform") // Make it optional with "?"
}

model PlatformAccess {
  id               String   @id @default(uuid())
  platform         Platform // Enum for Chrome, Firefox, etc.
  wallpaperId      String
  wallpaperLink    String
  wallpaperRef     String
  userId           String
  user             User     @relation(fields: [userId], references: [id])
}
model ConnectedPlatform {
  id          String   @id @default(uuid())
  chrome      Boolean  @default(false)
  firefox     Boolean  @default(false)
  brave       Boolean  @default(false)
  mobile      Boolean  @default(false)
  desktop     Boolean  @default(false)
  userId      String   @unique
  user        User     @relation(name: "UserToConnectedPlatform", fields: [userId], references: [id])
}